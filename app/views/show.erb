<div class='container'>

  <div class="weather-info-container">
      <% if @weather %>

        <span class="weather-info"><p>Weather:</p><%= @weather["weather"][0]["main"]  %></span>

        <span class="weather-info"><p>Current Temperature:</p><%=@weather["main"]["temp"]  %>°</span>

        <span class="weather-info"><p>Low:</p><%=@weather["main"]["temp_min"]  %>°</span>

        <span class="weather-info"><p>High:</p><%=@weather["main"]["temp_max"]  %>°</span>
      <% end %>
  </div>

  <form id="text-message" action="/weather/<%=@city%>/text" method="post">
  <input type="text" placeholder="17079710068" name="to"><br>
  <input type="submit" value="Send Message to a Friend">
  </form>

</div>


